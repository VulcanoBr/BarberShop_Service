<section class="d-flex justify-content-center align-items-center" style="min-height: 68vh;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card bg-black">
          <div class="card-header bg-black text-white  text-center">
              <h4 style="font-family: 'Playfair Display'" style="color: #FFD700;" >Login de Admin <i class="bi bi-scissors" ></i> De Ouro </h4>
              
          </div>
          <% flash.each do |key, value| %>
            <div data-controller="flash" data-action="click->flash#removeMessage" id="flash-message" class="flash <%= key %> alert alert-danger bold text-black" data-flash-target="message"><%= value %></div>
          <% end %>
          
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: new_admin_user_session_path(resource_name)) do |f| %>
              <div class="mb-3 text-white">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
              </div>
              <div class="mb-3 text-white">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Senha" } %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="mb-3 form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label text-white" %>
                </div>
              <% end %>
              <div class="d-grid gap-2">
                <%= f.button :submit, "Entrar", class: "btn btn-black text-white btn-block" %>
              </div>
            <% end %>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>