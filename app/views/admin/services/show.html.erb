<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Detalhes do Serviço</h1>
  
</div>

<div class="card">
  <div class="card-header">
    Serviço: <strong><%= @service.name %></strong>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Nome:</dt>
      <dd class="col-sm-9"><%= @service.name %></dd>

      <dt class="col-sm-3">Descrição:</dt>
      <dd class="col-sm-9"><%= @service.description %></dd>

      <dt class="col-sm-3">Preço:</dt>
      <dd class="col-sm-9"><%= format_price(@service.price) %></dd>

      <dt class="col-sm-3">Duração:</dt>
      <dd class="col-sm-9"><%= @service.duration %> minutos</dd>

      <dt class="col-sm-3">Criado em:</dt>
      <dd class="col-sm-9"><%= l @service.created_at, format: :long if @service.created_at %></dd> <%# 'l' é para localização de data/hora %>

      <dt class="col-sm-3">Atualizado em:</dt>
      <dd class="col-sm-9"><%= l @service.updated_at, format: :long if @service.updated_at %></dd>
    </dl>
  </div>
</div>

<div class="mt-4">
  <
  <%= link_to edit_admin_service_path(@service), class: "btn btn-outline-success", title: "Editar" do %>
        <i class="bi bi-pencil"></i>
  <% end %>
  <%= link_to admin_services_path, class: 'btn btn-secondary', title: "Lista Services" do %>
      <i class="bi bi-list-ul"></i>
  <% end %>
  <%= link_to admin_service_path(@service),
                            class: 'btn btn-danger', title: "Excluir",
                            data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir o serviço '#{@service.name}'?" }  do %>
                    <i class="bi bi-trash"></i>
                <% end %>
</div>