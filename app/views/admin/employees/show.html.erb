<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Detalhes do Funcionario</h1>
  
</div>

<div class="card">
  <div class="card-header">
    Funcionario: <strong><%= @employee.name %></strong>
  </div>
  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Apelido:</dt>
      <dd class="col-sm-9"><%= @employee.surname %></dd>

      <dt class="col-sm-3">Ativo:</dt>
      <dd class="col-sm-9"><%= @employee.active %></dd>

      <dt class="col-sm-3">Criado em:</dt>
      <dd class="col-sm-9"><%= l @employee.created_at, format: :long if @employee.created_at %></dd> <%# 'l' é para localização de data/hora %>

      <dt class="col-sm-3">Atualizado em:</dt>
      <dd class="col-sm-9"><%= l @employee.updated_at, format: :long if @employee.updated_at %></dd>
    </dl>
  </div>
</div>

<div class="mt-4">
  
  <%= link_to edit_admin_employee_path(@employee), class: "btn btn-outline-success", title: "Editar" do %>
        <i class="bi bi-pencil"></i>
  <% end %>
  <%= link_to admin_employees_path, class: 'btn btn-secondary', title: "Lista employees" do %>
      <i class="bi bi-list-ul"></i>
  <% end %>
  <%= link_to admin_employee_path(@employee),
                            class: 'btn btn-danger', title: "Excluir",
                            data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir o funcionario '#{@employee.name}'?" }  do %>
                    <i class="bi bi-trash"></i>
                <% end %>
</div>