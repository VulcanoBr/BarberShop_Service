<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Gerenciar Funcionarios</h1>
  <%= link_to new_admin_employee_path, class: "btn btn-sm btn-outline-primary" do %>
        <i class="bi bi-plus"></i> Novo Funcionario
  <% end %>
</div>

<div class="card">
  <div class="card-body">
    <% if @employees.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Apelido</th>
            <th scope="col">Ativo</th>
            <th scope="col" class="text-end">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.surname %></td>
              <td><%= employee.active %></td>
              <td class="text-end">
                <%= link_to admin_employee_path(employee), class: "btn btn-outline-primary", title: "Visualizar" do %>
                      <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_admin_employee_path(employee), class: "btn btn-outline-success", title: "Editar" do %>
                      <i class="bi bi-pencil"></i>
                <% end %>
                <%= link_to admin_employee_path(employee),
                            class: 'btn btn-sm btn-danger', title: "Excluir",
                            data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir o funcionario '#{employee.name}'?" }  do %>
                    <i class="bi bi-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-info" role="alert">
        Nenhum funcionario cadastrado ainda. <%= link_to 'Crie o primeiro!', new_admin_employee_path %>
      </div>
    <% end %>
  </div>
</div>

