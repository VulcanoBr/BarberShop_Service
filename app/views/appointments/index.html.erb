<div class="container py-4">
  <div class="row">
    <div class="col-md-12 text-center mb-4">
      <h1 class="display-5 fw-bold">Agende seu horário</h1>
      <p class="fs-5">Escolha a data e o serviço desejado para agendar seu horário</p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-5">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0">Calendário</h5>
        </div>
        <div class="card-body">
          <div id="calendar" class="calendar-container" data-controller="calendar">
            <%= render partial: 'calendar', locals: { date: @date } %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-7">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0">Agendamento</h5>
        </div>
        <div class="card-body">
          <div id="appointment_form">
            <%= render partial: 'form', locals: { 
              appointment: Appointment.new, 
              date: @date, 
              services: @services,
              available_times: available_times_for_date(@date)
            } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>