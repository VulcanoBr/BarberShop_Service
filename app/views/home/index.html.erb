<%# --- Seção Serviços --- %>
<section id="services" class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center fw-bold mb-5">Nossos Serviços</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @services.each do |service| %>
      <%# Exemplo de Card de Serviço (Idealmente, carregar do banco @services) %>
      <div class="col">
        <div class="card h-100 shadow-sm border-0">
          <%= image_tag "service1.jpeg", class: "card-img-top", alt: "Ícone de Serviço" %>
          <div class="card-body text-center">
            <h5 class="card-title fw-bold"><%= service.name %></h5>
            <p class="card-text text-muted"><%= service.description %></p>
            <p class="fw-bold fs-5"><%= format_price(service.price) %></p> <%# Exemplo de Preço %>
          </div>
          <div class="card-footer bg-white border-0 text-center pb-3">
             <%= link_to "Agendar", new_appointment_path, class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
      <% end %>

    </div>
     <div class="text-center mt-5">
        <%= link_to "Ver Todos e Agendar", list_services_path, class: "btn btn-dark btn-lg" %>
    </div>
  </div>
</section>

