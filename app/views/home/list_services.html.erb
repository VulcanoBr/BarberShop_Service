<div class="container my-5"> <%# Container principal com margem vertical %>
  <h1 class="text-center mb-4">Nossos Serviços</h1> <%# Título centralizado com margem inferior %>

  <% if @services_list.present? %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4"> <%# Define a grade: 1 col em extra-small, 2 em small, 3 em medium+, com espaçamento (gutter) %>
      <% @services_list.each do |service| %>
        <div class="col"> <%# Coluna da grade %>
          <div class="card h-100 shadow-sm"> <%# Card com altura 100% (para alinhar) e sombra leve %>
            <%# Você pode adicionar uma imagem aqui se tiver: %>
            <%#= image_tag service.image_url, class: "card-img-top", alt: service.name if service.image_url.present? %>

            <div class="card-body d-flex flex-column"> <%# Corpo do card com flexbox para alinhar o botão no final %>
              <h5 class="card-title"><%= service.name %></h5>
              <p class="card-text"><%= service.description %></p>
              <p class="card-text">
                <strong>Preço:</strong>
                <%= format_price(service.price) %>
              </p>

              <div class="mt-auto"> <%# Empurra o botão para baixo %>
                <%= link_to "Agendar Serviço", new_appointment_path, class: "btn btn-primary w-100" %> <%# Botão linkando para new_appointment_path, largura 100% %>
              </div>
            </div>
          </div> <%# Fim do card %>
        </div> <%# Fim da coluna %>
      <% end %> <%# Fim do loop @services_list.each %>
    </div> <%# Fim da row %>
  <% else %>
    <p class="text-center">Nenhum serviço disponível no momento.</p> <%# Mensagem se não houver serviços %>
  <% end %> <%# Fim do if @services_list.present? %>

</div> <%# Fim do container %>