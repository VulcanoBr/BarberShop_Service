
<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-primary text-white">Login Cliente  <i class="bi bi-scissors" ></i> De Ouro.</div>
      <div>
        <% flash.each do |key, value| %>
          <div data-controller="flash" data-action="click->flash#removeMessage" id="flash-message" class="flash <%= key %> alert alert-danger bold text-black" data-flash-target="message"><%= value %></div>
        <% end %>
      </div>
      <div class="card-body">
        <%= simple_form_for :customer, url: customers_login_path do |f| %>
          <%= f.input :email, label: "Email", required: true, input_html: { class: "form-control" } %>
          <%= f.input :password, label: "Senha", input_html: { class: "form-control" } %>
          
          <div class="mb-3 form-check">
            <%= check_box_tag :remember_me, 1, false, class: "form-check-input" %>
            <%= label_tag :remember_me, "Lembrar de mim", class: "form-check-label" %>
          </div>
          
          <div class="d-grid gap-2">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>
        
        <div class="mt-3 text-center">
          <p>
            <%= link_to "Esqueci minha senha", customers_forgot_password_path %>
          </p>
          <p>
            NÃ£o tem uma conta? <%= link_to "Cadastre-se", customers_signup_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>