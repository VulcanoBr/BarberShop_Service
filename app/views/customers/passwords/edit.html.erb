

<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">Alterar Senha</div>
      <div class="card-body">
        <%= simple_form_for @customer, url: customers_password_path, method: :patch, html: { class: 'needs-validation', novalidate: true } do |f| %>
          <%= f.error_notification %>
          
          <%= f.input :current_password, label: "Senha Atual", input_html: { class: "form-control" } %>
          <%= f.input :password, label: "Nova Senha", input_html: { class: "form-control" } %>
          <%= f.input :password_confirmation, label: "Confirme a Nova Senha", input_html: { class: "form-control" } %>
          
          <div class="d-grid gap-2 mt-3">
            <%= f.button :submit, "Alterar Senha", class: "btn btn-primary" %>
            <%= link_to 'Cancelar', customers_root_path, class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>