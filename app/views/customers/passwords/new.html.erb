
<div class="container mt-5"> 
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Esqueceu sua senha?</h2>
        </div>
        <div>
          <% flash.each do |key, value| %>
              <div data-controller="flash" data-action="click->flash#removeMessage" id="flash-message" class="flash <%= key %> alert alert-danger bold text-black" data-flash-target="message"><%= value %></div>
            <% end %>
        </div>
        <div class="card-body">
          <%= simple_form_for :customer, url: customers_password_reset_path, html: { class: 'needs-validation', novalidate: true } do |f| %>
            <div class="form-inputs">
              <%= f.input :email, label: 'Email', required: true, autofocus: true, input_html: { name: 'email', class: 'form-control' } %>
            </div>

            <div class="form-actions mt-4">
              <%= f.button :submit, "Enviar instruções", class: 'btn btn-primary w-100' %>
            </div>
          <% end %>
          
          <div class="mt-3 text-center">
            <p><%= link_to "Voltar para login", customers_login_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>