<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h4>Dashboard</h4>
    </div>
    <div class="card-body">
      <h5>Bem-vindo, <%= current_customer.name %>!</h5>
      <p>Esta é a sua área de cliente.</p>
      
      <div class="row mt-4">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title">Minha Agenda</h5>
              <p class="card-text">Meus Agendamentos</p>
              <%= link_to "Agendamentos", customers_appointments_path, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title">Meu Perfil</h5>
              <p class="card-text">Atualize suas informações pessoais</p>
              <%= link_to "Editar Perfil", customers_profile_path, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
        
        <div class="col-md-4">
          <div class="card">
            <div class="card-body text-center">
              <h5 class="card-title">Segurança</h5>
              <p class="card-text">Altere sua senha</p>
              <%= link_to "Alterar Senha", customers_password_path, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
        
        <!-- Você pode adicionar mais cards conforme necessário -->
      </div>
    </div>
  </div>
</div>