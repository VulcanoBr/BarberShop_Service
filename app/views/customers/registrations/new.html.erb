
<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-primary text-white">Cadastro de Cliente <i class="bi bi-scissors" ></i> De Ouro.</div>
      <div class="card-body" data-controller="maskphone">
        <%= simple_form_for @customer, url: customers_signup_path, html: { class: 'needs-validation', novalidate: true } do |f| %>
          
          <%= f.input :name, label: "Nome", required: true, input_html: { class: "form-control" } %>
          <%= f.input :email, label: "Email", required: true, input_html: { class: "form-control" } %>
          <%= f.input :phone, label: "Telefone (com DDD)", required: true, input_html: { 
                class: "form-control", 
                placeholder: "(XX) XXXXX-XXXX", 
                maxlength: "15", 
                "data-maskphone-target": "inputPhone", 
                "data-action": "keyup->maskphone#addMaskToPhoneFields" } 
            %>
          <%= f.input :password, label: "Senha", required: true, input_html: { class: "form-control" } %>
          <%= f.input :password_confirmation, label: "Confirme a senha", required: true, input_html: { class: "form-control" } %>
          
          <div class="d-grid gap-2 mt-3">
            <%= f.button :submit, "Cadastrar", class: "btn btn-primary" %>
            <%= link_to 'Cancelar', root_path, class: 'btn btn-secondary' %>
          </div>
        <% end %>
        
        <div class="mt-3 text-center">
          <p>
            Já tem uma conta? <%= link_to "Faça login", customers_login_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>